{
  "name": "@turkish-logistics/lambda",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:bundle": "esbuild src/handlers/*.ts --bundle --platform=node --target=node20 --format=cjs --outdir=dist/handlers --external:@aws-sdk/*",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/client-sqs": "^3.700.0",
    "@turkish-logistics/agent": "workspace:*",
    "@turkish-logistics/database": "workspace:*",
    "@turkish-logistics/parser": "workspace:*",
    "@turkish-logistics/shared": "workspace:*",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
